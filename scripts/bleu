if [[ -z $2 ]]; then
  echo "Usage: bleu output reference"
  exit 1
fi

output=$1
refs=$2

format=plain
grep "|||" $output > /dev/null
if [[ $? -eq 0 ]]; then
  format=nbest
fi

numrefs=$(ls $refs* | wc -l)
verbose=0

#JOSHUA=$(dirname $0)/..
# TODO: change this
JOSHUA="${JOSHUA:-$HOME/work/apache/joshua}"
echo "JOSHUA is : $JOSHUA"
java -cp $JOSHUA/target/joshua-*-jar-with-dependencies.jar \
    -Dfile.encoding=utf8 -Djava.library.path=$JOSHUA/lib \
    -Xmx256m -Xms256m \
    org.apache.joshua.util.JoshuaEval -cand $output -format $format -ref $refs -rps $numrefs -m BLEU 4 closest -v 0
